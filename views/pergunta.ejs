<%- include('./partials/head.ejs') %>
<%- include('./partials/topbar.ejs') %>
<div class="container">
        <div class="card" id="form-ask">
            <div class="card-header">
                <h3><%= pergunta.title %></h3>
                <p><%= pergunta.description %></p>
            </div>
            <div class="card-body">
                <form method="POST" action="/responder">
                    <h4>Resposta</h4>                    
                    <br>
                    <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
                    <textarea placeholder="Digite sua resposta aqui" class="form-control" name="corpo"></textarea>
                    <br>
                    <button class="btn btn-primary" type="submit">Enviar</button>
                </form>
            </div>
        </div>
        <br>

        <% respostas.forEach(resposta => { %>
            <div class="card">
                <div class="card-header">
                    <p>Enviado em: <%= resposta.createdAt %></p>
                </div>
                <div class="card-body">
                    <p> <%= resposta.corpo %> </p>
                </div>
            </div>
            <br>
        <% }) %>
    </div>
<%- include('./partials/footer.ejs') %>
